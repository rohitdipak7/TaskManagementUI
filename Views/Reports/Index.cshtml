@model TaskManagementUI.Models.ReportViewModel

<div class="d-flex justify-content-between align-items-center">
    <h2>Reports</h2>
    <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Back to Home</a>
</div>
<h3>Tasks Due in the Next Week</h3>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Due Date</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ticket in Model.TicketsDueInNextWeek)
        {
            <tr>
                <td>@ticket.Title</td>
                <td>@ticket.Description</td>
                <td>@ticket.DueDate.ToString("dd-MM-yyyy HH:mm:ss")</td>
                <td>@ticket.Status</td>
            </tr>
        }
    </tbody>
</table>

<h3>Completed Tasks</h3>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Completed Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ticket in Model.CompletedTickets)
        {
            <tr>
                <td>@ticket.Title</td>
                @*@Html.ActionLink("Tickets", "Details", new { id = item.ID }, new { @class = "btn btn-info" })*@

                <td>@ticket.Description</td>
                <td>@ticket.ModifiedDate.ToString("dd-MM-yyyy HH:mm:ss")</td>

            </tr>
        }
    </tbody>
</table>

<h3>Team Performance</h3>
<table class="table">
    <thead>
        <tr>
            <th>Team Name</th>
            <th>Completed Tasks</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var team in Model.TeamPerformance)
        {
            <tr>
                <td>@team.TeamName</td>
                <td>@team.CompletedTasks</td>
            </tr>
        }
    </tbody>
</table>
